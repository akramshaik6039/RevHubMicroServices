pipeline {
    agent any
    
    environment {
        DOCKER_REGISTRY = 'docker.io'
        DOCKER_USERNAME = 'akramshaik6039'
        DOCKER_CREDENTIALS_ID = 'docker-hub-credentials'
        MAVEN_OPTS = '-Dmaven.repo.local=.m2/repository'
        NODE_VERSION = '18'
        JAVA_VERSION = '17'
    }
    
    tools {
        maven 'Maven'
        nodejs "${NODE_VERSION}"
        jdk 'JDK-17'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                script {
                    env.BUILD_VERSION = "${BUILD_NUMBER}-${GIT_COMMIT.take(7)}"
                    env.IMAGE_TAG = "${BUILD_VERSION}"
                }
            }
        }
        
        stage('Setup Dependencies') {
            parallel {
                stage('Backend Dependencies') {
                    steps {
                        dir('backend') {
                            sh 'mvn dependency:resolve -q'
                        }
                    }
                }
                stage('Frontend Dependencies') {
                    steps {
                        dir('frontend') {
                            sh 'npm ci --silent'
                        }
                    }
                }
            }
        }
        
        stage('Unit Tests') {
            parallel {
                stage('Backend Tests') {
                    steps {
                        script {
                            def services = [
                                'config-server', 'api-gateway', 'user-service',
                                'post-service', 'feed-service', 'follow-service',
                                'notification-service', 'chat-service', 'search-service'
                            ]
                            
                            services.each { service ->
                                dir("backend/${service}") {
                                    sh "mvn test -Dmaven.test.failure.ignore=true"
                                    publishTestResults testResultsPattern: 'target/surefire-reports/*.xml'
                                }
                            }
                        }
                    }
                }
                stage('Frontend Tests') {
                    steps {
                        dir('frontend') {
                            sh 'npm run test -- --watch=false --browsers=ChromeHeadless'
                        }
                    }
                }
            }
        }
        
        stage('Build Applications') {
            parallel {
                stage('Build Backend Services') {
                    steps {
                        script {
                            def services = [
                                'config-server', 'api-gateway', 'user-service',
                                'post-service', 'feed-service', 'follow-service',
                                'notification-service', 'chat-service', 'search-service'
                            ]
                            
                            services.each { service ->
                                dir("backend/${service}") {
                                    sh "mvn clean package -DskipTests"
                                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                                }
                            }
                        }
                    }
                }
                stage('Build Frontend') {
                    steps {
                        dir('frontend') {
                            sh 'npm run build --prod'
                            archiveArtifacts artifacts: 'dist/**/*', fingerprint: true
                        }
                    }
                }
            }
        }
        
        stage('Build Docker Images') {
            when {
                anyOf {
                    branch 'main'
                    branch 'develop'
                }
            }
            steps {
                script {
                    def services = [
                        'config-server', 'api-gateway', 'user-service',
                        'post-service', 'feed-service', 'follow-service',
                        'notification-service', 'chat-service', 'search-service'
                    ]
                    
                    services.each { service ->
                        dir("backend/${service}") {
                            sh """
                                docker build -t ${DOCKER_USERNAME}/revhub-${service}:${IMAGE_TAG} .
                                docker tag ${DOCKER_USERNAME}/revhub-${service}:${IMAGE_TAG} ${DOCKER_USERNAME}/revhub-${service}:latest
                            """
                        }
                    }
                    
                    dir('frontend') {
                        sh """
                            docker build -t ${DOCKER_USERNAME}/revhub-frontend:${IMAGE_TAG} .
                            docker tag ${DOCKER_USERNAME}/revhub-frontend:${IMAGE_TAG} ${DOCKER_USERNAME}/revhub-frontend:latest
                        """
                    }
                }
            }
        }
        
        stage('Push Docker Images') {
            when {
                anyOf {
                    branch 'main'
                    branch 'develop'
                }
            }
            steps {
                script {
                    docker.withRegistry("https://${DOCKER_REGISTRY}", "${DOCKER_CREDENTIALS_ID}") {
                        def services = [
                            'config-server', 'api-gateway', 'user-service',
                            'post-service', 'feed-service', 'follow-service',
                            'notification-service', 'chat-service', 'search-service', 'frontend'
                        ]
                        
                        services.each { service ->
                            sh """
                                docker push ${DOCKER_USERNAME}/revhub-${service}:${IMAGE_TAG}
                                docker push ${DOCKER_USERNAME}/revhub-${service}:latest
                            """
                        }
                    }
                }
            }
        }
        
        stage('Deploy to Staging') {
            when {
                branch 'develop'
            }
            steps {
                sh '''
                    sed -i "s|image: .*/revhub-|image: ${DOCKER_USERNAME}/revhub-|g" docker-compose.staging.yml
                    sed -i "s|:latest|:${IMAGE_TAG}|g" docker-compose.staging.yml
                    
                    docker-compose -f docker-compose.staging.yml up -d
                    sleep 30
                    curl -f http://localhost:8080/actuator/health || exit 1
                '''
            }
        }
        
        stage('Deploy to Production') {
            when {
                branch 'main'
            }
            steps {
                script {
                    timeout(time: 5, unit: 'MINUTES') {
                        input message: 'Deploy to Production?', ok: 'Deploy'
                    }
                    
                    sh '''
                        sed -i "s|image: .*/revhub-|image: ${DOCKER_USERNAME}/revhub-|g" docker-compose.production.yml
                        sed -i "s|:latest|:${IMAGE_TAG}|g" docker-compose.production.yml
                        
                        docker-compose -f docker-compose.production.yml up -d
                        sleep 30
                        curl -f http://localhost:8080/actuator/health || exit 1
                    '''
                }
            }
        }
    }
    
    post {
        always {
            sh 'docker system prune -f'
            publishTestResults testResultsPattern: '**/target/surefire-reports/*.xml'
        }
        
        success {
            echo "✅ RevHub ${BUILD_VERSION} build completed successfully"
        }
        
        failure {
            echo "❌ RevHub build ${BUILD_NUMBER} failed"
        }
    }
}